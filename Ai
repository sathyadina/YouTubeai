  <script>
    const emailStep = document.getElementById('emailStep');
    const paymentStep = document.getElementById('paymentStep');
    const emailBtn = document.getElementById('emailBtn');
    const userEmail = document.getElementById('userEmail');
    const emailDisplay = document.getElementById('emailDisplay');
    const youtubeBtn = document.getElementById('youtubeBtn');
    const successMessage = document.getElementById('successMessage');

    emailBtn.addEventListener('click', () => {
      const email = userEmail.value.trim();
      if (!email) {
        alert('Please enter a valid email');
        return;
      }

      localStorage.setItem('yt_user_email', email);

      emailStep.style.display = 'none';
      paymentStep.style.display = 'block';
      emailDisplay.innerText = email;

      const basePayLink = "https://paylink.geniebiz.lk/XpkN9e8knL";
      youtubeBtn.href = basePayLink + "?tool=youtube&email=" + encodeURIComponent(email);
    });

    window.addEventListener('load', () => {
      const savedEmail = localStorage.getItem('yt_user_email');
      if (savedEmail) {
        emailStep.style.display = 'none';
        paymentStep.style.display = 'block';
        emailDisplay.innerText = savedEmail;
        const basePayLink = "https://paylink.geniebiz.lk/XpkN9e8knL";
        youtubeBtn.href = basePayLink + "?tool=youtube&email=" + encodeURIComponent(savedEmail);
      }

      const params = new URLSearchParams(window.location.search);
      if (params.get('tool') === 'youtube') {
        successMessage.style.display = 'block';
      }
    });
  </script>

